# Remove the line below if you want to inherit .editorconfig settings from higher directories
root = true

[*]
indent_style = space
end_of_line = crlf
insert_final_newline = false
trim_trailing_whitespace = true

[*.{targets,props,csproj,nuspec,cake}]
tab_width = 2
indent_size = 2

[*.cs]
indent_size = 4
tab_width = 4

# Localization seems to be overkill for this package at the moment
dotnet_diagnostic.CA1303.severity = none